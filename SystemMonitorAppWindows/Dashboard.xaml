<Window x:Class="SystemMonitorAppWindows.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Monitor"
        Height="600" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Icon="Resources/monitor.ico">

    <Grid x:Name="RootGrid"
          RenderTransformOrigin="0.5,0.0">
        <Grid.RenderTransform>
            <ScaleTransform x:Name="RootScale" ScaleX="0.9" ScaleY="0.9"/>
        </Grid.RenderTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Background="#2D2D30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть -->
            <TextBlock Text="System Monitor"
                       FontSize="20"
                       Foreground="DodgerBlue"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       Grid.Column="0"/>

            <!-- Центр: иконка -->
            <Image Source="pack://application:,,,/Resources/monitor.ico"
                   Width="32" Height="32"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Column="1"/>

            <!-- Правая часть -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        Grid.Column="2">
                <Button Content="—"
                        Width="30" Height="30"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Click="MinimizeButton_Click"/>
                <Button Content="✕"
                        Width="30" Height="30"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Карточки -->
        <UniformGrid Grid.Row="1" Columns="2" Rows="2" Margin="20">
            <!-- CPU -->
            <Border Background="#2D2D30" CornerRadius="10" Margin="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="CPU Usage" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
                    <ProgressBar x:Name="CpuProgressBar" Height="20" Foreground="DodgerBlue" Maximum="100"/>
                    <TextBlock x:Name="CpuText" FontSize="16" Foreground="LightGray" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- RAM -->
            <Border Background="#2D2D30" CornerRadius="10" Margin="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="RAM Usage" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
                    <ProgressBar x:Name="RamProgressBar" Height="20" Foreground="MediumPurple" Maximum="100"/>
                    <TextBlock x:Name="RamText" FontSize="16" Foreground="LightGray" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- GPU -->
            <Border Background="#2D2D30" CornerRadius="10" Margin="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="GPU Usage" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
                    <ProgressBar x:Name="GpuProgressBar" Height="20" Foreground="Orange" Maximum="100"/>
                    <TextBlock x:Name="GpuText" FontSize="16" Foreground="LightGray" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Disk -->
            <Border Background="#2D2D30" CornerRadius="10" Margin="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="Disk Usage" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
                    <ProgressBar x:Name="DiskProgressBar" Height="20" Foreground="Green" Maximum="100"/>
                    <TextBlock x:Name="DiskText" FontSize="16" Foreground="LightGray" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
</Window>